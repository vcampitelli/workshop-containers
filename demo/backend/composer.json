{
    "name": "vcampitelli/demo-docker",
    "description": "Uma simples aplicação usando Slim Framework para demonstrar o uso de containers",
    "keywords": [
        "docker",
        "container",
        "php"
    ],
    "homepage": "https://github.com/vcampitelli/workshop-containers/",
    "license": "MIT",
    "authors": [
        {
            "name": "Vinícius Campitelli",
            "email": "eu@viniciuscampitelli.com",
            "homepage": "https://viniciuscampitelli.com/"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "monolog/monolog": "^2.9",
        "php-di/php-di": "^6.4",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.11"
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^1.0.0",
        "phpstan/extension-installer": "^1.2.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        },
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8000 -t public"
    }
}
